#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BUTTON in
	# runs pulsemixer twice anyway, IDK why... (tested with `if' statement, anyway doesn't work)
	1) "$TERMINAL" -e pulsemixer ;;
	2) pulsemixer --toggle-mute ;;
	4) pulsemixer --change-volume +1 ;;
	5) pulsemixer --change-volume -1 ;;
	# 3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
	#                                     - Middle click to mute.
	#                                     - Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(pulsemixer --get-volume | awk '{print $1}')"

[[ "$(pulsemixer --get-mute)" = "1" || "$vol" = "0" ]] && echo ðŸ”‡ && exit

if [ "$vol" -gt "66" ]; then
	icon="ï€¨"
elif [ "$vol" -gt "33" ]; then
	icon="ï€§"
else
	icon="ï€¦"
fi

echo "$icon $vol%"
